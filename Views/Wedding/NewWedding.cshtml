@model Wedding
<h1>Create your wedding!</h1>

<form asp-controller="Wedding" asp-action="SubmitWedding" method="POST">

    @* WEDDER ONE *@
    <div class="mb-3">
      <label asp-for="WedderOne"></label>
      <span asp-validation-for="WedderOne" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="WedderOne">
    </div>

    @* WEDDER Two *@
    <div class="mb-3">
      <label asp-for="WedderTwo"></label>
      <span asp-validation-for="WedderTwo" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="WedderTwo">
    </div>

    @* DATE *@
    <div class="mb-3">
      <label asp-for="Date"></label>
      <span asp-validation-for="Date" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="Date" type="Date">
    </div>

    @* ADDRESS *@
    <div class="mb-3">
      <label asp-for="Address"></label>
      <span asp-validation-for="Address" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="Address">
    </div>

    <button>Submit</button>

</form>