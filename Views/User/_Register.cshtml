@model User

<h3>Register</h3>

<form asp-controller="User" asp-action="Register" method="POST">

    @* First Name *@
    <div class="mb-3">
      <label asp-for="FirstName"></label>
      <span asp-validation-for="FirstName" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="FirstName">
    </div>

    @* Last Name *@
    <div class="mb-3">
      <label asp-for="LastName"></label>
      <span asp-validation-for="LastName" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="LastName">
    </div>

    @* Email  *@
    <div class="mb-3">
      <label asp-for="Email"></label>
      <span asp-validation-for="Email" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="Email">
    </div>

    @* Password  *@
    <div class="mb-3">
      <label asp-for="Password"></label>
      <span asp-validation-for="Password" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="Password">
    </div>

    @* Confirm Password  *@
    <div class="mb-3">
      <label asp-for="ConfirmPassword"></label>
      <span asp-validation-for="ConfirmPassword" class="text-danger font-weight-bold">
      </span>
      <input class="form-control" asp-for="ConfirmPassword">
    </div>

    <button>Submit</button>

</form>